algoritmo "SomaFuncao"
var
   V1, V2, S: inteiro
funcao Soma(X, Y: inteiro): inteiro
inicio
      Retorne X + Y
fimfuncao
inicio
      Escreva ("Digite um valor: ")
      Leia (V1)
      Escreva ("Digite outro valor: ")
      Leia (V2)
      S <- Soma(V1, V2)
      Escreval ("A soma entre ", V1, " e ", V2, " é: ", S)
fimalgoritmo
